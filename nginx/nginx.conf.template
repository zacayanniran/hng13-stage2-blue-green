# Upstream: primary + backup
upstream backend {
    keepalive 16;

    # Failover aggressively
    server __PRIMARY_SERVER__ max_fails=1 fail_timeout=1s;
    server __BACKUP_SERVER__ max_fails=1 fail_timeout=1s;
}

server {
    listen 80;
    server_name _;

    # Main routing via upstream backend
    location / {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Forward app metadata headers
        proxy_pass_header X-App-Pool;
        proxy_pass_header X-Release-Id;

        # Very aggressive timeouts for chaos tests
        proxy_connect_timeout 1s;
        proxy_send_timeout 2s;
        proxy_read_timeout 4s;

        # Retry immediately on ANY 5xx
        proxy_next_upstream error timeout http_500 http_502 http_503 http_504;
        proxy_next_upstream_tries 2;

        proxy_buffering off;
    }

    # Health check endpoint
    location /healthz {
        proxy_pass http://backend/healthz;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass_header X-App-Pool;
        proxy_pass_header X-Release-Id;

        proxy_connect_timeout 1s;
        proxy_read_timeout 3s;

        proxy_next_upstream error timeout http_500 http_502 http_503 http_504;
        proxy_next_upstream_tries 2;

        proxy_buffering off;
    }

    # Version endpoint
    location /version {
        proxy_pass http://backend/version;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass_header X-App-Pool;
        proxy_pass_header X-Release-Id;

        proxy_connect_timeout 1s;
        proxy_read_timeout 4s;

        proxy_next_upstream error timeout http_500 http_502 http_503 http_504;
        proxy_next_upstream_tries 2;

        proxy_buffering off;
    }
}
